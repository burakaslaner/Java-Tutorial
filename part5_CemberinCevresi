import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Çemberin yarıçapını giriniz: ");
        int r = input.nextInt();
        int cevre;
        int pi = 3;
        cevre = 2*pi*r;
        System.out.println("Çemberin çevresi: " + cevre);

        System.out.println("*****************");
        System.out.print("Kısa kenar uzunluğunu girin: ");
        int kisaKenar = input.nextInt();
        System.out.print("Uzun kenar uzunluğunu girin: ");
        int uzunKenar = input.nextInt();
        int alan;
        alan = kisaKenar * uzunKenar;
        System.out.println("Dikdörtgenin alanı: " + alan);


    }
}
